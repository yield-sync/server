{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": [
    "route/api/**/*.ts",
    "route/api/**/*.test.ts",
    "sql/**/*.ts",
    "./types.d.ts",
  ]
}
