{
  "author": "",
  "name": "server",
  "version": "0.0.1",
  "description": "Server for yield-sync",
  "main": "server.ts",
  "scripts": {
    "build": "rimraf dist && npx tsc && cp -r static/ dist/",
    "dev": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "frontend-build": "NPM_CONFIG_PRODUCTION=false npm run build --prefix frontend",
    "frontend-install": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend --legacy-peer-deps",
    "frontend-install-dev": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend --legacy-peer-deps --only=dev",
    "heroku-postbuild": "npm run frontend-install && npm run frontend-install-dev && npm run frontend-build",
    "lint": "eslint . --ext .ts --fix",
    "predev": "npm run build",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest --verbose",
    "initialize-db": "npm run build && node dist/sql/production.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@getbrevo/brevo": "^2.1.0",
    "@types/mysql": "^2.15.26",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "axios": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.1",
    "connect-history-api-fallback": "^2.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1"
  }
}
